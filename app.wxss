/**app.wxss**/
page {
  display: flex;
  flex-direction: column;
  background: #fff;
}
.page-header {
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}
.page-header-text {
  padding: 20rpx 40rpx;
  color: #999;
  text-align: center;
}
.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2px solid #ccc;
}
.poster {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}
.meta {
  flex: 1;
}
.meta .title,.meta .sub-title {
  display: flex;
  margin-bottom: 15rpx;
}
.meta .title {
  font-size: 32rpx;
}
.meta .sub-title {
  font-size: 22rpx;
  color: #999;
}
.rating {
  font-size: 28rpx;
  font-weight: bold;
  color: red;
}
.scroll-item {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #EBEBEB;
}
.scroll-item .poster {
  flex: 1;
  height: 160rpx;
}
.scroll-item .movie-introduce {
  display: flex;
  flex-direction: column;
  flex: 2;
}
.scroll-item .movie-introduce .title {
  font-size: 30rpx;
}
.scroll-item .movie-introduce text:nth-child(2) {
  display: inline-block;
  margin: 14rpx 0;
  color: #AAAAAA;
  font-size: 16rpx;
}
.scroll-item .movie-introduce .director {
  color: #838B8B;
  font-size: 20rpx;
}
.scroll-item .rating {
  flex: 1;
  text-align: right;
}
.scroll-item .rating text {
  display: inline-block;
  padding: 12rpx;
  width: 38rpx;
  height: 30rpx;
  background-color: tomato;
  border-radius: 20rpx;
  color: white;
  text-align: center;
  line-height: 30rpx;
  }
.loading {
  text-align: center;
  font-size: 33rpx;
  padding: 30rpx;
  color: #AAAAAA;
}