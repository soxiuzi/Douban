/* pages/detail/detail.wxss */
page {
  height: 100%;
}
.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: .1;
}
.movie-posterInfo {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.movie-posterInfo .poster {
  width: 100%;
  height: 800rpx;
  margin: 40rpx 0;
}
.movie-posterInfo .movie-title {
  text-align: center;
}
.movie-rating,.movie-director,.movie-cast {
  margin: 40rpx 120rpx 20rpx 120rpx;
  font-size: 26rpx;
  color: #949494;
}
.movie-cast {
  position: relative;
  box-sizing: border-box;
  padding-left: 86rpx;
}
.movie-cast .mainActor {
  position: absolute;
  top: 0;
  left: 0;
}
.movie-abstract {
  margin: 70rpx 80rpx 0 80rpx;
}
.movie-abstract .summary {
  margin: 40rpx 0;
  line-height: 55rpx;
  text-indent: 2em;
  font-size: 26rpx;
  color: #6E6E6E;
}